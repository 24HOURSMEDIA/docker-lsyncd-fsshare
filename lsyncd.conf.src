settings {
    nodaemon  = true,
    statusFile = "/tmp/lsyncd.stat",
    statusInterval = $STATUS_INTERVAL
}

sync {
    default.rsync,
    source="/mnt/master",
    target="/mnt/replica",
    excludeFrom="/exclude.txt",
    delay=$DELAY,
    rsync={
        archive=$RSYNC_ARCHIVE,
        perms=$RSYNC_PERMS,
        chmod="$RSYNC_CHMOD"
    }
}